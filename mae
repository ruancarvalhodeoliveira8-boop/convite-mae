  <div id="petals-container"></div>

  <audio id="musicaFundo" loop>
    <source src="musica_mae.mp3" type="audio/mpeg">
  </audio>

  <div id="overlay">
    <h1 style="margin-bottom: 30px; color: #444;">Para algu√©m muito especial...</h1>
    <button class="btn-start" onclick="iniciar()">Abrir com Amor ‚ù§Ô∏è</button>
  </div>

  <div class="card">
    <div class="video-container">
      <div class="video-border">
        <video id="videoMain" playsinline muted>
          <source src="video_mae.mp4" type="video/mp4">
        </video>
      </div>
    </div>

    <div class="texts">
      <h1 id="titulo">M√£e</h1>
      <p id="subtitulo">Assista com o cora√ß√£o</p>

      <div class="buttons" id="areaBotoes">
        <button class="sim" onclick="aceitar()">SIM üíç</button>
        <button class="nao" onclick="recusar()">N√£o</button>
      </div>
    </div>
  </div>

  <script>
    const video = document.getElementById("videoMain");
    const musica = document.getElementById("musicaFundo");
    const titulo = document.getElementById("titulo");
    const subtitulo = document.getElementById("subtitulo");
    const areaBotoes = document.getElementById("areaBotoes");

    // Gerar P√©talas Caindo
    function createPetals() {
      const container = document.getElementById('petals-container');
      for (let i = 0; i < 25; i++) {
        const petal = document.createElement('div');
        petal.className = 'petal';
        petal.style.left = Math.random() * 100 + 'vw';
        petal.style.animationDuration = (Math.random() * 3 + 5) + 's';
        petal.style.animationDelay = Math.random() * 5 + 's';
        petal.style.width = Math.random() * 15 + 10 + 'px';
        petal.style.height = petal.style.width;
        container.appendChild(petal);
      }
    }
    createPetals();

    let perguntaFeita = false;

    function iniciar() {
      document.getElementById("overlay").style.opacity = "0";
      musica.play();
      setTimeout(() => {
        document.getElementById("overlay").style.display = "none";
        video.play();
      }, 800);
    }

    video.ontimeupdate = () => {
      if (video.currentTime >= 18.8 && !perguntaFeita) {
        video.pause();
        perguntaFeita = true;
        areaBotoes.style.display = "flex";
        titulo.innerText = "Voc√™ aceita?";
        subtitulo.innerText = "ESCOLHA UMA OP√á√ÉO ABAIXO";
      }
    };

    function aceitar() {
      areaBotoes.style.display = "none";
      titulo.innerText = "Te amo infinitamente!";
      subtitulo.innerText = "O v√≠deo continua...";
      video.play();
    }

    video.onended = () => {
      titulo.innerText = "Para Sempre ‚ù§Ô∏è";
      subtitulo.innerText = "Nos vemos no grande dia";
    }

    function recusar() {
      areaBotoes.style.display = "none";
      titulo.innerText = "Poxa... ü•∫";
      subtitulo.innerText = "Voc√™ sempre ser√° meu porto seguro.";
    }
  </script>
